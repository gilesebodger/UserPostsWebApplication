
@{
    ViewData["Title"] = "Detail";
}
@model UserPosts.Site.Models.UserPostDataViewModel
@{
    var title = "User Post Details";
    ViewData["Title"] = title;
}

<div class="row">

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-light">
                User Details
            </div>
            <div class="card-body">
                <p><span><b>UserId: </b></span>@Model.UserId</p>
                <p><span><b>Name: </b></span>@Model.Name</p>
                <p><span><b>UserName: </b></span>@Model.UserName</p>
                <p><span><b>Phone: </b></span>@Model.Phone</p>
                <p><span><b>Website: </b></span>@Model.Website</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-light">
                Address
            </div>
            <div class="card-body">
                <p><span><b>Street: </b></span>@Model.AddressStreet</p>
                <p><span><b>Suite: </b></span>@Model.AddressSuite</p>
                <p><span><b>City: </b></span>@Model.AddressCity</p>
                <p><span><b>Zip: </b></span>@Model.AddressZipcode</p>
                <p><span><b>Lat: </b></span>@Model.AddressLat</p>
                <p><span><b>Long: </b></span>@Model.AddressLng</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-light">
                Company Details
            </div>
            <div class="card-body">
                <p><span><b>Name: </b></span>@Model.CompanyName</p>
                <p><span><b>CatchPhrase: </b></span>@Model.CompanyCatchPhrase</p>
                <p><span><b>Bs: </b></span>@Model.CompanyBs</p>
            </div>
        </div>
    </div>
</div>
    
<div class="row">
    <h2>Posts</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Posts)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Body</td>
                </tr>
            }
        </tbody>
    </table>
</div>